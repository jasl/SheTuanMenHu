<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.state %></td>
    <td><%= link_to 'Show', group_page_path(params[:permalink],page) %></td>
    <td><%= link_to 'Edit', edit_group_page_path(params[:permalink],page) %></td>
    <td><%= link_to 'Destroy', group_page_path(params[:permalink],page), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @pages %>
<br />

