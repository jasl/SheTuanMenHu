<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Body</th>
    <th>Allow comment</th>
    <th>Type</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.body %></td>
    <td><%= article.allow_comment %></td>
    <td><%= article.type %></td>
    <td><%= article.state %></td>
    <td><%= link_to 'Show', group_article_path(article.group_id,article) %></td>
    <td><%= link_to 'Edit', edit_group_article_path(article.group_id,article) %></td>
    <td><%= link_to 'Destroy', group_article_path(article.group_id,article), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

