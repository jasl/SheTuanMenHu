<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.state %></td>
    <td><%= link_to 'Show', group_article_path(params[:permalink],article) %></td>
    <td><%= link_to 'Edit', edit_group_article_path(params[:permalink],article) %></td>
    <td><%= link_to 'Destroy', group_article_path(params[:permalink],article), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<%= will_paginate @articles %>

<br />

