<%= form_for(@group) do |f| %>
  <%= render 'shared/error', :obj => @group %>

  <div class="field">
    社团名称<br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    学校<br />
    <%= @group.school %>
  </div>
  <div class="field">
    短连接(必须为英文小写，且四位以上）<br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    口号<br />
    <%= f.text_field :slogan %>
  </div>
  <div class="field">
    简介（200字以内）<br />
    <%= f.text_area :introduction %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
