<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Date</th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.author %></td>
    <td><%= article.created_at %></td>
    <td><%= link_to 'Show', group_article_path(article.group.permalink, article.id) %></td>
  </tr>
<% end %>
</table>
