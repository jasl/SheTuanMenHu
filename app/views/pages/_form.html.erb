<%= javascript_include_tag "/javascripts/ckeditor/ckeditor.js" %>
<%= form_for @page, :url => @url do |f| %>
  <p id="notice"><%= notice %></p>
  <%= render 'shared/error', :obj => @page %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category %><br />
    <%= f.select :category, {'介绍' => 11, '其他' => 12}, {:include_blank => false} %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= cktext_area_tag("page[body]", @page.body, :input_html => {:cols => 10, :rows => 20}) %>
  </div>
  <div class="field">
    <%= f.label :state %><br />
    <%= f.check_box :state, :checked => true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
