<% if @articles.size > 0 %>
    <% 0.upto(1) do %>
        <% break if @articles.size == 0 %>
        <% @article = @articles.shift %>
        <div class="atomentry" id="page-<%= @article.id %>">
          <h2 class="title"><%= link_to @article.title, group_article_path(@group.permalink, @article.id) %></h2>
          <div class="content">
            <%= raw @article.body %>
          </div>
          <div class="meta">
             <p class="author">[<%= @article.created_at.strftime('%Y-%m-%d %H:%M:%S') %>]<%= @article.author %></p>
          </div>
        </div>
        <% end %>
        <% @articles.each do |article| %>
          <div class="preview" id="page-<%= article.id %>">
            <h2 class="title"><%= link_to article.title, group_article_path(@group.permalink, article.id) %></h2>
            <div class="meta">
              <p>[<%= article.created_at.strftime('%Y-%m-%d %H:%M:%S') %>]<%= article.author %></p>
            </div>
          </div>
    <% end %>
    <div id="paginate">
        <%= will_paginate @articles, :previous_label => "上一页", :next_label => "下一页" %>
    </div>
<% else %>
    <p>还没有发布新闻。</p>
<% end %>

